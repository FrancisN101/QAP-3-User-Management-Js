<%- include('partials/header', { title: "Admin" }) %>
<style>
  table {
    width: 100%;
    border-collapse: collapse;
    margin: 20px 0;
  }

  th, td {
    padding: 10px;
    text-align: left;
    border: 1px solid #ddd;
  }

  th {
    background-color: #4CAF50;
    color: white;
  }

  tr:nth-child(even) {
    background-color: #c76a6a;
  }

  tr:hover {
    background-color: #7f6363;
  }

  a {
    display: inline-block;
    padding: 10px 15px;
    background-color: #005fbe;
    color: white;
    text-decoration: none;
    margin-top: 20px;
    border-radius: 5px;
  }

  a:hover {
    background-color: #427af5;
  }
</style>
<h1>Admin Dashboard</h1>
<table>
  <tr>
    <th>Username</th>
    <th>Email</th>
    <th>Role</th>
  </tr>
  <% users.forEach(user => { %>
    <tr>
      <td><%= user.username %></td>
      <td><%= user.email %></td>
      <td><%= user.role %></td>
    </tr>
  <% }) %>
</table>

<a href="/logout">Logout</a>
<%- include('partials/footer') %>